.sk-nav-extended
{
	height: 100vh;
	overflow-y: hidden;
	background: var(--hex-grey);
}

.sk-nav-extended .sk-nav-inner h6 a, .sk-nav-extended .sk-nav-inner .sk-nav-menu
{
	color: var(--hex-dark);
}

.sk-nav-extended .sk-nav-inner h6 a:active
{
	color: var(--hex-dark);
}

.sk-nav-extended .sk-nav-inner h6 a:hover
{
	color: var(--hex-blue);
}

.sk-nav-content
{
	width: 83%;
	margin: var(--x-64) auto 0 auto;
}

.sk-nav-content-links a
{
	color: var(--hex-dark);
	text-decoration: none;

	transition: color 400ms;
	will-change: color;

	pointer-events: auto;
	cursor: pointer;

	user-select: none;
	-webkit-touch-callout: none;
	touch-callout:  none;
}

.sk-nav-content-links a:active, .sk-nav-content-links a:visited
{
	color: var(--hex-dark);
}

.sk-nav-content-links a:hover
{
	color: var(--hex-blue);
}

.sk-nav-menu-over-extended
{
	color: var(--hex-blue) !important;
}
